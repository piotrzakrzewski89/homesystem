{% trans_default_domain 'FOSUserBundle' %}

{{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}
                  
        <div  class="form-group row">
            {{ form_label(form.current_password, null, {"label_attr":{"class":"col-2 col-form-label"}}) }}
            {{ form_errors(form.current_password) }}
            <div  class="col-10">
                {{ form_widget(form.current_password,{"attr": {"class": "form-control"}}) }}
            </div>
        </div>

        <div  class="form-group row">
            {{ form_label(form.plainPassword.first, null, {"label_attr":{"class":"col-2 col-form-label"}}) }}
            {{ form_errors(form.plainPassword.first) }}
            <div  class="col-10">
                {{ form_widget(form.plainPassword.first,{"attr": {"class": "form-control"}}) }}
            </div>
        </div>

        <div  class="form-group row">
            {{ form_label(form.plainPassword.second, null, {"label_attr":{"class":"col-2 col-form-label"}}) }}
            {{ form_errors(form.plainPassword.second) }}
            <div  class="col-10">
                {{ form_widget(form.plainPassword.second,{"attr": {"class": "form-control"}}) }}
            </div>
        </div>
    <div>
        <input class="btn btn-primary" type="submit" value="{{ 'change_password.submit'|trans }}" />
    </div>
{{ form_end(form) }}
